{
  "clangd.fallbackFlags": [ "-std=c17" ],
  "clangd.semanticHighlighting": true,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-1.3.0-darwin-9.0.1",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    }
  }
}
